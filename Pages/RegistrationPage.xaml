<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MessengerApp.RegistrationPage"
             Title="Registration">
    <Grid
        RowDefinitions="30, 50,30,50,30,50,50,50,50"
          ColumnDefinitions=".25*,.5*,.08*,.07*,.1* "
          Padding="20"
          RowSpacing="10"
          ColumnSpacing="10">
        <Label Grid.Row="0"
               Grid.Column ="1"
               Text="Name"
               x:Name="Lol"
               FontSize="20"
               HorizontalOptions="Start" />
        <Entry Placeholder="Enter name"
               BackgroundColor="White"
               Grid.Row="1"
               Grid.Column ="1"/>
        <Label Grid.Row="2"
               Grid.Column ="1"
               Text="Email"
               FontSize="20"
               HorizontalOptions="Start" />
        <Entry Placeholder="Enter email"
               BackgroundColor="White"
               Grid.Row="3"
               Grid.Column ="1"/>
        <Label Grid.Row="4"
               Grid.Column ="1"
               Text="Password"
               FontSize="20"
               HorizontalOptions="Start" 
               />
        <Entry Placeholder="Enter password"
               IsPassword="True"
               x:Name="PasswordEntry"
                BackgroundColor="White"
               Grid.Row="5"
               Grid.Column ="1"/>
        <ImageButton Source="eye_open.png"
                 x:Name="ShowAuthorizationPasswordButton"
                Clicked="OnShowAuthorizationPasswordButtonClicked"
                 Grid.Row="5"
               Grid.Column ="2"/>
        <Entry Placeholder="Confirm password"
               IsPassword="True"
               BackgroundColor="White"
               Grid.Row="6"
               Grid.Column ="1"/>
        <Button Text="Add new user"
                BackgroundColor="Blue"
                 x:Name="AddUserButton"
                Clicked="OnAddUserButtonClicked"
                 Grid.Row="7"
               Grid.Column ="1"/>
        <Button Text="Go back"
                BorderColor="White"
                BackgroundColor="White"
                TextColor="Blue"
                HorizontalOptions="Start"
                x:Name="BackToAuthorizationButton"
                Clicked="OnBackToAuthorizationButtonClicked"
                 Grid.Row="8"
               Grid.Column ="1"/>
    </Grid>
</ContentPage>