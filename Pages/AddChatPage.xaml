<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MessengerApp.Pages.AddChatPage"
             Title="Add Chat"
             xmlns:viewModel="clr-namespace:MessengerApp.ViewModels"
             Background="#13232f">
    <Grid RowDefinitions="50, 50 ,50">
        <Label Text="Chat name"
               TextColor="White"/>
        <Entry 
               Placeholder="Enter the name of chat"
               ReturnType="Go"
               TextColor="Black" />
        <Button
                Margin="0,30,0,0"
                Background="#f0932b"
                Text="Add chat"
                TextColor="White" />
    </Grid>
</ContentPage>