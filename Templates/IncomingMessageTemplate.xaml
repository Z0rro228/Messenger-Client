<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MessengerApp.Templates.IncomingMessageTemplate"
             xmlns:model="clr-namespace:MessengerApp.Models"
              x:DataType="model:Message">
    <VerticalStackLayout>
        <Label
          Margin="5,0,5,0"
          FontSize="11"
          Text="{Binding Timestamp, StringFormat='{0:HH:mm}'}" />
        <Border Stroke="Gray"
                    StrokeShape="RoundRectangle 8"
                    StrokeThickness="1"
                    WidthRequest="250"
                    HorizontalOptions="Start"
                    Padding="10"
                    Margin="8">
            <Label Text="{Binding Content}"
               TextColor="White"/>
        </Border>
    </VerticalStackLayout>
</ContentView>
