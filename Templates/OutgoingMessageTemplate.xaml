<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MessengerApp.Templates.OutgoingMessageTemplate"
             xmlns:model="clr-namespace:MessengerApp.Models"
             x:DataType="model:Message">
    <VerticalStackLayout>
        <Label 
          HorizontalOptions="End"   
          Margin="0,20,5,5"
          FontSize="11"
          Text="{Binding Timestamp, StringFormat='{0:HH:mm dd.MM}'}"
            TextColor="White"/>
        <Border Stroke="Black"
                    StrokeShape="RoundRectangle 8"
                    StrokeThickness="1"
                    WidthRequest="250"
                    HorizontalOptions="End"
                    Padding="10"
                    BackgroundColor="#eeeeee">
            <Label Text="{Binding Content}"/>
        </Border>
    </VerticalStackLayout>
</ContentView>
